<h1>New Trip</h1>

<%= form_with(model: @trip) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :start_date %><br>
    <%= form.date_field :start_date %>
  </p>

  <p>
    <%= form.label :end_date %><br>
    <%= form.date_field :end_date %>
  </p>

  <p>
    <%= form.label :participants, "Participants (comma separated)" %><br>
    <%= form.text_field :participants %>
  </p>

  <%= form.submit "Create Trip" %>
<% end %>

<%= link_to "Back", trips_path %>
